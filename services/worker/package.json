{
  "name": "@opencode-orchestrator/worker",
  "version": "0.1.0",
  "description": "Assistant worker runtime for orchestrating OpenCode assistants",
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "start": "bun run src/entries/orchestrator.ts",
    "dev": "bun --watch src/entries/orchestrator.ts",
    "opencode-orchestrator": "bun run src/entries/orchestrator.ts",
    "start:local_worker": "bun run src/entries/dev.ts",
    "dev:local_worker": "bun --watch src/entries/dev.ts",
    "build": "tsc",
    "test": "vitest run",
    "test:unit": "vitest run src/domain src/application",
    "test:integration": "vitest run src/__tests__/integration",
    "test:e2e": "vitest run src/__tests__/e2e",
    "test:coverage": "vitest --coverage",
    "test:watch": "vitest watch",
    "test:opencode": "bun run src/scripts/test-opencode.ts",
    "lint": "biome check src/",
    "lint:fix": "biome check --write src/",
    "typecheck": "tsc --noEmit"
  },
  "keywords": [
    "opencode",
    "orchestrator",
    "worker",
    "assistant"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@opencode-ai/sdk": "^1.0.33",
    "@workspace/backend": "workspace:*",
    "convex": "^1.16.0",
    "dotenv": "^16.4.5",
    "nanoid": "^5.0.8",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "@types/node": "^20.17.6",
    "@vitest/coverage-v8": "^4.0.6",
    "bun-types": "^1.1.38",
    "typescript": "^5.7.2",
    "vitest": "^4.0.6"
  }
}
